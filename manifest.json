{

	"manifest_version": 2,

	"name": "cmx",
	"version": "0.2.0",
	"description": "M-x inspired tab switcher.",

	"permissions": [
		"tabs"
	],

	"web_accessible_resources": [
		"modal.html"
	],

	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"js": [ "content.js" ],
			"css": [ "style.css" ]
		}
	],

	"background": {
		"scripts": [ "background.js" ],
		"persistent": false
	}

}
